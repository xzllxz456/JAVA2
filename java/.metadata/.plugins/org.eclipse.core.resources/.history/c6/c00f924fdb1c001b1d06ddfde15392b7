
public class mainClass {

	public static void main(String[] args) {
		/*
		 * 숫자(상수: 변할수 없는 숫자) 
		 * 
		 * 			2진수	: 0,1
		 * 			8진수	: 0~7 10 -> 8 표기법 : 010
		 * 			10진수	: 0~9
		 * 			16진수	: 0~9 A B C D E F(15)	0xff -> 255
		 * 
		 * 변수(variable) : 그릇(데이터)
		 * 				   	크기는 다양하다, 종류도 다르다.
		 * 					정수, 소수, 문자, 문자열, 판별
		 * 					변수명을 정함.
		 * 					
		 * 					변수 선언
		 * 
		 * 					자료형 변수명;
		 * 					int number;
		 * 
		 * 					integer == 정수
		 * 
		 * 					대입
		 * 					number = 14;
		 * 					int number = 15;
		 * 					
		 */
		// 변수 작명의 규칙
		int a; // ASCII code : 알파벳의 숫자로 정의
		a = 123;
		int A;
		// 예약어 사용불가
		// int int;
		// 숫자가 맨 앞에 올수 없음
		// int 2as;
		// 상수 사용 불가
		// int 123;
		// 연산자 사용 불가
		// int +num;
		// int -num;
		// int *num;
		int number_postion_char;
		int numberpostionchar;
		int numPostionChar;
		int numPosChar;
		int inumPosChar;
	}

}
